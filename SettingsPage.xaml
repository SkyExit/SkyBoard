<Page x:Class="SkyBoard.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SkyBoard"
      mc:Ignorable="d" 
      Height="550" Width="400"
      Title="SettingsPage">

    <Grid Cursor="Hand">
        <TextBlock Name="SettingsVersion" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="v0.0.0" VerticalAlignment="Top" FontSize="48" TextDecorations="{x:Null}" Foreground="White" FontWeight="Bold" FontStyle="Italic"/>
        <CheckBox x:Name="DarkModeCheckBox" Content="DarkMode" Click="DarkMode_Click" HorizontalAlignment="Center" 
                  Margin="0,100,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" FlowDirection="RightToLeft" Padding="180,0,0,0" 
                  Background="#FF008EFF" VerticalContentAlignment="Center"/>

        <Button x:Name="UpdateButton" Visibility="Visible" Click="UpdateButton_Click" Height="40" Width="250" Cursor="Hand" Content="update available" FontWeight="Bold" FontSize="22"></Button>

    </Grid>
</Page>
